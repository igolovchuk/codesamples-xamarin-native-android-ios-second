<?xml version="1.0" encoding="UTF-8" ?>
<resources>
    <style name="mainTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:colorPrimary">#db5c4c</item>
    </style>

     <style name="pickerStyle" parent="android:Theme.Material.Light.Dialog.Alert">
       <!-- <item name="android:windowBackground">@drawable/layout_border</item>  -->
         <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialogStyle" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/main</item>     
    </style>

    <style name="mainTheme.Splash" parent ="@style/mainTheme">
      <item name="android:windowBackground">@drawable/splash_screen</item>
      <item name="android:windowNoTitle">true</item>
     <!-- <item name="android:windowFullscreen">true</item>-->
    </style>

    <style name="searchViewStyle" parent="android:Theme.Material.Light.Dialog.Alert">
       <!--  <item name="android:colorControlActivated">@android:color/black</item>-->
         <item name="android:colorAccent">@color/lightBlue</item> 
    </style>

    <style name="switchStyle">
        <item name="android:colorControlActivated">@color/lightBlue</item>
    </style>
    
</resources>